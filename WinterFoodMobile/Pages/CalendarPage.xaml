<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinterFoodMobile.Pages.CalendarPage"
             Title="CalendarPage">

    <Grid RowDefinitions="Auto, Auto, *"           
          Background="White">

        <Label Text="January 2023"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <Grid x:Name="calendarGrid"
              RowDefinitions="Auto"
              ColumnDefinitions="*,*,*,*,*,*,*">
            
            <Label Text="Sun" HorizontalOptions="CenterAndExpand" />
            <Label Text="Mon" HorizontalOptions="CenterAndExpand" />
            <Label Text="Tue" HorizontalOptions="CenterAndExpand" />
            <Label Text="Wed" HorizontalOptions="CenterAndExpand" />
            <Label Text="Thu" HorizontalOptions="CenterAndExpand" />
            <Label Text="Fri" HorizontalOptions="CenterAndExpand" />
            <Label Text="Sat" HorizontalOptions="CenterAndExpand" />
        </Grid>

        <ListView x:Name="itemsListView">
            
        </ListView>
    </Grid>
</ContentPage>